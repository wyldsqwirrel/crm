from django.urls import path, include
from rest_framework.routers import DefaultRouter
from .views import CRMModelViewSet, CustomFieldViewSet, CRMRecordViewSet

router = DefaultRouter()
router.register(r'crm-models', CRMModelViewSet)
router.register(r'custom-fields', CustomFieldViewSet)
router.register(r'crm-records', CRMRecordViewSet)

urlpatterns = [
    path('api/', include(router.urls)),
]
